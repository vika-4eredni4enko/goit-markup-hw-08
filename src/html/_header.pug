header.header
    .container
        .header__wrap.flex-wrap
            a.header__logo(href="#")
                img(src="@img/logo.svg", alt="Logo")
            .btn-menu.js-open-menu
                span.line
            .header__right.js-mob-menu.flex-wrap
                .header__nav-wrap
                    nav.header__nav
                        ul.header__nav-list.flex-wrap
                            li.header__nav-item
                                a.header__nav-link(href="#") Студія
                            li.header__nav-item
                                a.header__nav-link(href="#") Портфоліо
                            li.header__nav-item
                                a.header__nav-link(href="#") Контакти
                .header__contacts.flex-wrap
                    ul.header__soc-list.flex-wrap
                        li.header__soc-item
                            a.header__soc-link(href="#" target="_blank" rel="nofollow") Instagram
                        li.header__soc-item
                            a.header__soc-link(href="#" target="_blank" rel="nofollow") Twitter
                        li.header__soc-item
                            a.header__soc-link(href="#" target="_blank" rel="nofollow") Facebook
                        li.header__soc-item
                            a.header__soc-link(href="#" target="_blank" rel="nofollow") LinkedIn
                    .header__contacts-email
                        a.header__contacts-email-link(href="mailto:info@devstudio.com") 
                            svg.icon.icon-email
                                use(xlink:href="@img/icons/icons.svg#email")
                            span info@devstudio.com
                    .header__contacts-phone
                        a.header__contacts-phone-link(href="tel:+38 096 111 11 11") 
                            svg.icon.icon-smartphone
                                use(xlink:href="@img/icons/icons.svg#smartphone")
                            span +38 096 111 11 11



















